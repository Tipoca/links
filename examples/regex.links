fun f(number) client {
  domAppendChildXml(
     <p>{enxml(number ++ (if (number ~ /[0-9]+/) " is a number" 
                          else " is a non-number"))}</p>,
     domGetRefByID("div"));
}

<html>
   <body>
     <h1>Enter a string</h1>
     <form l:onsubmit="{f(number)}">
      <input l:name="number"/>
      <input type="submit" value="Submit"/>
     </form>
     <div id="div"/>
   </body>
</html>
