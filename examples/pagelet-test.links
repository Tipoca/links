fun isInt (x) { x ~ /-?[0-9]+$/ }

var checker = isInt `errorMsg` fun (x) { x ++ " is not an integer!"};

var checkedInt = 
   formlet <#>{input `satisfies` checker -> n}</#> yields stringToInt(n);

fun intForm(label) {
  (f=formlet
       <#><b>{stringToXml(label)}</b>: {checkedInt -> i}{submit("submit integer")}</#>
     yields
       i,
   h=fun (i) {
       <html>
        <head><title>Pagelet test</title></head>
        <body>
         For '{stringToXml(label)}' you entered the integer '{intToXml(i)}'.
        </body>
       </html>
   }
  )
}

var x = intForm("x");
var y = intForm("y");

pagelet
 <html>
  <head><title>Pagelet test</title></head>
  <body>
   {x.f => x.h}
   {y.f => y.h}
  </body>
 </html>

